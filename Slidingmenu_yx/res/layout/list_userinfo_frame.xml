<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/head_bg" >

            <ImageView
                android:id="@+id/head_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/image_on"
                android:padding="1dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/userinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="20.0sp" />

        <View
            android:id="@+id/view_separate1"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/horizontal_separation_line_blue" />

        <com.slidingmenu.view.ButtonLayout
            android:id="@+id/nick_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true" />

        <com.slidingmenu.view.SocialButtonLayout
            android:id="@+id/boya_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true" />

        <com.slidingmenu.view.SocialButtonLayout
            android:id="@+id/work_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="80dp" >

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_login"
                android:gravity="center"
                android:text="编辑资料"
                android:textColor="#ffffff"
                android:textSize="20dp" />
            
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="0.05"
                android:layout_height="wrap_content"/>
            
             <Button
                android:id="@+id/btn_bind"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_login"
                android:gravity="center"
                android:text="账号绑定"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>