<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/rootblock_default_bg"
    android:padding="10.0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/board"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/calendar_bg"
            android:orientation="vertical"
            android:padding="15.0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="学院路到沙河"
                android:layout_marginLeft="20dp"
                android:textSize="24.0sp"
                android:textStyle="bold"
                android:textColor="#CCCC66"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10.0dp">
                
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="距离下一趟班车："
                android:layout_marginLeft="10dp"
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="#fffff0"
                android:gravity="center"/>
                
                 <TextView
                android:id="@+id/time_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="12分"
                android:layout_marginLeft="15dp"
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="#3cb371"
                android:gravity="center"/>
            </LinearLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="沙河到学院路"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="24.0sp"
                android:textStyle="bold"
                android:textColor="#CCCC66"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10.0dp">
                
                
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="距离下一趟班车："
                android:layout_marginLeft="10dp"
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="#fffff0"
                android:gravity="center"/>
                
                 <TextView
                android:id="@+id/time_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="1小时12分"
                android:layout_marginLeft="15dp"
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="#3cb371"
                android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/calendar_map"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/car" />
    </LinearLayout>

</ScrollView>