<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/buttontext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#333333"
        android:textSize="18sp" />

    <View
        android:id="@+id/view_separate"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_alignBottom="@+id/buttontext1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/horizontal_separation_line" />
    
    <ToggleButton 
        android:id="@+id/buttontext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_butn_toggle"
        android:layout_alignBaseline="@+id/buttontext1"
        android:layout_alignTop="@+id/buttontext1"
        android:layout_marginRight="5dip"
        android:checked="true"
        android:textOn=""
        android:textOff=""  
        android:text=""/>
</RelativeLayout>